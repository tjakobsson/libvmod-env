varnishtest "Test env vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import env from "${vmod_topbuild}/src/.libs/libvmod_env.so";

	sub vcl_deliver {
		set resp.http.env = env.get("USER");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.env == "root"
}

client c1 -run
